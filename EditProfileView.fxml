<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.EditProfileController">
    <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label text="First Name"/>
    <TextField fx:id="firstNameField"/>
    <Label text="Last Name"/>
    <TextField fx:id="lastNameField"/>
    <Label text="Password"/>
    <PasswordField fx:id="passwordField"/>
    <VBox spacing="10.0" alignment="CENTER">
        <Button text="Save Changes" onAction="#handleSaveChanges"/>
        <Button text="Back" onAction="#handleBack"/>
    </VBox>
</VBox>
