<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="212.0" prefWidth="404.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.LoginController">
    <Label text="Username:">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Label>
    <TextField fx:id="usernameField">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
    </TextField>
    <Label text="Password:">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Label>
    <PasswordField fx:id="passwordField">
        <VBox.margin>
            <Insets left="20.0" right="20.0" />
        </VBox.margin>
    </PasswordField>
    <Button onAction="#handleLogin" prefHeight="26.0" prefWidth="61.0" text="Login">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Button>
    <Button onAction="#showRegisterForm" text="Register">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Button>
</VBox>
