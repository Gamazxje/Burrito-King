<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="407.0" prefWidth="617.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.CheckoutController">
    <Label text="Checkout">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Label>
    <ListView fx:id="orderSummaryListView" />
    <Label text="Total Price:">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Label>
    <Label fx:id="totalPriceLabel" />
    <Label text="Credits Available:">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Label>
    <Label fx:id="creditsLabel" />
    <Label text="Enter Credits to Redeem">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Label>
    <TextField fx:id="redeemCreditsField" promptText="Credits">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <Label text="Enter Credit Card Information">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Label>
    <TextField fx:id="cardNumberField" promptText="Card Number">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <TextField fx:id="expiryDateField" promptText="Expiry Date (MM/YY)">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <TextField fx:id="cvvField" promptText="CVV">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <Button onAction="#handlePlaceOrder" text="Place Order">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin></Button>
    <Button onAction="#handleBack" prefHeight="26.0" prefWidth="80.0" text="Back">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" />
      </VBox.margin></Button>
</VBox>
